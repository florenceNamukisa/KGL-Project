doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Happy Hoe Grocery Store - Procurement Form
    //- link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/register.css')
  body
    .form-bg
      .container
        .row
          .col-md-6.col-md-offset-3
            .form-container
              .form-icon
                i.fa.fa-user
              h3.title= produce._id ? 'Edit Produce' : 'Procurement Form'
              form#procurementForm.form-horizontal(action=produce._id ? `/update-produce/${produce._id}` : '/addProduce' method='POST')
                .form-group
                  label(for='produceName') Produce Name:
                  input#produceName.form-control(type='text' name='produceName' value=produce.produceName )
                  span.error-message
                .form-group
                  label(for='produceType') Produce Type:
                  input#produceType.form-control(type='text' name='produceType' value=produce.produceType)
                  span.error-message
                .form-group
                  label(for='date') Date:
                  input#date.form-control(type='date' name='date' value=produce.date)
                  span.error-message
                .form-group
                  label(for='time') Time:
                  input#time.form-control(type='time' name='time' value=produce.time)
                  span.error-message
                .form-group
                  label(for='tonnage') Tonnage (kg):
                  input#tonnage.form-control(type='number' name='tonnage' value=produce.tonnage)
                  span.error-message
                .form-group
                  label(for='cost') Cost Per Quantity (UGX):
                  input#cost.form-control(type='number' name='cost' value=produce.cost)
                  span.error-message
                .form-group
                  label(for='dealerName') Dealer's Name:
                  input#dealerName.form-control(type='text' name='dealerName' value=produce.dealerName)
                  span.error-message
                .form-group
                  label(for='branch') Branch:
                  select#branch.form-control(name='branch')
                    option(value='') Select Branch
                    option(value='mattuga' selected=produce.branch == 'mattuga') Mattuga
                    option(value='maganjo' selected=produce.branch == 'maganjo') Maganjo
                  span.error-message
                .form-group
                  label(for='contact') Contact:
                  input#contact.form-control(type='tel' name='contact' pattern='[0-9]{10}' title='Valid 10-digit phone number' value=produce.contact)
                  span.error-message
                .form-group
                  label(for='sellingPrice') Actual Price:
                  input#sellingPrice.form-control(type='number' name='sellingPrice' value=produce.sellingPrice)
                  span.error-message
                input.btn.btn-default(type='submit' value='Save' class='register-btn btn btn-primary')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src='/js/produce.js')
