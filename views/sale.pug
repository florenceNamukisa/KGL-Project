doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/register.css')
  body
    nav.navbar
      ul
        li
          a(href='/') Home
        li
          a(href='/addUser') Signup
        li
          a(href='/signUser') Login
    .form-bg
      .container
        .row
          .col-md-4.col-md-offset-4
            .form-container
              .form-icon
                i.fa.fa-user
              h3.title= sale._id ? 'Edit Sale' : 'Add Sale'
              form#registrationForm.form-horizontal(action=sale._id ? `/update-sale/${sale._id}` : '/addSale' method='POST')
                .form-group
                  label(for='branch') Branch:
                  select#branch.form-control(name='branch' required='')
                    option(value='mattuga' selected=sale.branch == 'mattuga') Mattuga
                    option(value='maganjo' selected=sale.branch == 'maganjo') Maganjo
                .form-group
                  label(for='produceName') Produce Name:
                  input#produceName.form-control(name='produceName' type='text' value=sale.produceName required='')
                .form-group
                  label(for='tonnage') Tonnage (kg):
                  input#tonnage.form-control(name='tonnage' type='number' value=sale.tonnage required='')
                .form-group
                  label(for='amountPaid') Amount Paid (UGX):
                  input#amountPaid.form-control(name='amountPaid' type='number' value=sale.amountPaid required='')
                .form-group
                  label(for='buyerName') Buyer&apos;s Name:
                  input#buyerName.form-control(name='buyerName' type='text' value=sale.buyerName required='')
                .form-group
                  label(for='salesAgentName') Sales Agent&apos;s Name:
                  input#salesAgentName.form-control(name='salesAgentName' type='text' value=sale.salesAgentName required='')
                .form-group
                  label(for='dateTime') Date and Time:
                  input#dateTime.form-control(name='dateTime' type='datetime-local' value=sale.dateTime )
                input.btn.btn-default(type='submit' value='Save' class='register-btn btn btn-primary')
    script(src='/js/register.js') 
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
