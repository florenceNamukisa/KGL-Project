doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Happy Hoe Grocery Store
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/register.css')
.form-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .form-container
          .form-icon
            i.fa.fa-user
          h3.title Produce Procurement Form
          form#procurementForm.form-horizontal
            .form-group
              label(for='produceName') Produce Name:
              input#produceName.form-control(type='text' required='')
            .form-group
              label(for='produceType') Produce Type:
              input#produceType.form-control(type='text' required='')
            .form-group
              label(for='date') Date:
              input#date.form-control(type='date' name='date')
            .form-group
              label(for='time') Time:
              input#time.form-control(type='time' name='time')
            .form-group
              label(for='tonnage') Tonnage (kg)
              input#tonnage.form-control(type='number' name='tonnage' required='')
            .form-group
              label(for='cost') Cost (UGX):
              input#cost.form-control(type='number' name='cost' required='' min='10000' step='1' title='Numeric, at least 10000 UGX')
            .form-group
              label(for='dealerName') Dealer&apos;s Name:
              input#dealerName.form-control(type='text')
            .form-group
              label(for='branch') Branch:
              select#branch.form-control(type='text' required='')
                option(value='') Select Branch
                option(value='mattuga') Mattuga
                option(value='maganjo') Maganjo
            .form-group
              label(for='contact') Contact:
              input#contact.form-control(type='tel' name='contact' required='' pattern='[0-9]{10}' title='Valid 10-digit phone number')
            .form-group
              label(for='sellingPrice') Price to be Sold At:
              input#sellingPrice.form-control(type='number' name='sellingPrice' required='' min='0' step='1')
            input.btn.btn-default(type='submit')
script(src='/js/register.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
