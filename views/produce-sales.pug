doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Happy Hoe Grocery Store
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/register.css')
.form-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .form-container
          .form-icon
            i.fa.fa-user
          h3.title Produce Sales
          form#registrationForm.form-horizontal
            .form-group
              label(for='branch') Branch:
              select#branch.form-control(type='text' required='')
                option(value='mattuga') Mattuga
                option(value='maganjo') Maganjo
            .form-group
              label(for='produceName') Produce Name:
              input#produceName.form-control(type='text' required='')
            .form-group
              label(for='tonnage') Tonnage (kg)
              input#tonnage.form-control(type='number' name='tonnage' required='')
            .form-group
              label(for='amountPaid') Amount Paid (UGX):
              input#amountPaid.form-control(type='text')
            .form-group
              label(for='buyerName') Buyer&apos;s Name:
              input#buyerName.form-control(type='text')
            .form-group
              label(for='salesAgentName') Sales Agent&apos;s Name:
              input#salesAgentName.form-control(type='text')
            .form-group
              label(for='dateTime') Date and Time:
              input#dateTime.form-control(type='datetime-local' required='')
            input.btn.btn-default(type='submit')
script(src='/js/register.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
