doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Happy Hoe Grocery - Registration
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/register.css')
.form-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .form-container
          .form-icon
            i.fa.fa-user
          h3.title Create Account
          form#registrationForm.form-horizontal(action="/addUser" method="POST" )
            .form-group
              label(for='userName') User Name
              input#firstName.form-control(type='text' required name='userName')
              span#firstName-error.error-message
            //- .form-group
            //-   label(for='lastName') Last Name
            //-   input#lastName.form-control(type='text' required='')
            //-   span#lastName-error.error-message
            .form-group
              label(for='role') Role
              select#role.form-control(required name='role')
                option(value='') Select a role
                option(value='manager') Manager
                option(value='sales-agent') Sales Agent
                option(value='admin') Admin
              span#role-error.error-message
            .form-group
              label(for='branch') Branch
              select#role.form-control(required name='branch')
                option(value='') Select a branch
                option(value='maganjo') Maganjo
                option(value='matuga') Matuga
              span#role-error.error-message
            .form-group
              label(for='email') Email
              input#email.form-control(type='email' placeholder='Email address' required name='email')
              span#email-error.error-message
            .form-group
              label(for='password') Password
              input#password.form-control(type='password' placeholder='Password' required name='password')
              span#password-error.error-message
            .form-group
              label(for='confirmPassword') Confirm Password
              input#confirmPassword.form-control(type='password' placeholder='Confirm password' required name='confirmPassword')
              span#confirmPassword-error.error-message
            //- .form-check
            //-   input#rememberMe.form-check-input(type='checkbox' name='remember' value='true')
            //-   label.form-check-label(for='rememberMe') Remember me
            //- button#submitBtn.btn.btn-default(type='button'value="sign Up") Create Account
            //- .para5
            //-   p.small.mb-0
            //-     | Have an account? 
            //-     a(href='./login.html') Login
            input(type="submit", value="register" class="register-btn")
script(src='/js/register.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
