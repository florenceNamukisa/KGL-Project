doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Happy Hoe Grocery - Registration
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/register.css')
  body
    .form-bg
      .container
        .row
          .col-md-4.col-md-offset-4
            .form-container
              .form-icon
                i.fa.fa-user
              h3.title Create Account
              form#registrationForm.form-horizontal(action="/addUser" method="POST")
                .form-group
                  label(for='userName') User Name
                  input#userName.form-control(type='text' name='userName')
                .form-group
                  label(for='role') Role
                  select#role.form-control( name='role')
                    option(value='') Select a role
                    option(value='manager') Manager
                    option(value='sales-agent') Sales Agent
                    option(value='admin') Admin
                .form-group
                  label(for='branch') Branch
                  select#branch.form-control(name='branch')
                    option(value='') Select a branch
                    option(value='matuga') Matuga
                    option(value='maganjo') Maganjo
                .form-group
                  label(for='email') Email
                  input#email.form-control(type='email' placeholder='Email address' name='email')
                .form-group
                  label(for='password') Password
                  input#password.form-control(type='password' placeholder='Password' name='password')
                .form-group
                  label(for='confirmPassword') Confirm Password
                  input#confirmPassword.form-control(type='password' placeholder='Confirm password' name='confirmPassword')
                input(type="submit", value="Register" class="register-btn")
                a(href='/signUser') Already have an account? Login
    script(src='/js/sign.js')
    script(src='https://cdn.jsdelivr')
